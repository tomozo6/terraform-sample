# -----------------------------------------------------------------------
# Kinesis Data Stream
# -----------------------------------------------------------------------
resource "aws_kinesis_stream" "drivingdata" {
  name             = "${local.product}-${local.env}-drivingdata-kds"
  shard_count      = 1
  retention_period = 24
  encryption_type  = "KMS"
  kms_key_id       = "alias/aws/kinesis"

  shard_level_metrics = [
    "IncomingBytes",
    "OutgoingBytes",
  ]

  stream_mode_details {
    stream_mode = "PROVISIONED"
  }

  tags = {
    Name = "${local.product}-${local.env}-drivingdata-kds"
  }
}


# -----------------------------------------------------------------------
# S3
# -----------------------------------------------------------------------
resource "aws_s3_bucket" "drivingdata" {
  bucket        = "${local.product}-${local.env}-drivingdata-s3"
  force_destroy = false

  tags = {
    Name = "${local.product}-${local.env}-drivingdata-s3"
  }
}

resource "aws_s3_bucket_server_side_encryption_configuration" "drivingdata" {
  bucket = aws_s3_bucket.drivingdata.bucket

  rule {
    apply_server_side_encryption_by_default {
      sse_algorithm = "AES256"
    }
  }
}

