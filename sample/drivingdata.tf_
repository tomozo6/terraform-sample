resource "aws_s3_bucket_public_access_block" "drivingdata" {
  bucket                  = aws_s3_bucket.drivingdata.bucket
  block_public_acls       = true
  block_public_policy     = true
  ignore_public_acls      = true
  restrict_public_buckets = true
}

resource "aws_s3_bucket_versioning" "drivingdata" {
  bucket = aws_s3_bucket.drivingdata.id

  versioning_configuration {
    status = "Enabled"
  }
}
